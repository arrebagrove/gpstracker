<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>GSP-Tracker - @ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body class="bs-docs-home">
        <!-- Docs master nav -->
        <header class="navbar navbar-static-top bs-docs-nav" id="top" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("GPS-Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                    </ul>
                </nav>
            </div>
        </header>
        
        @RenderBody()

        <footer class="bs-docs-footer" role="contentinfo">
            <div class="container">
                <p>Semesterarbeit by <a href="mailto:sidleste@students.zhaw.ch">Stefan Sidler</a></p>
                <p>GitHub Project: <a href="https://github.com/infinitemonkey/gpstracker">https://github.com/infinitemonkey/gpstracker</a></p>
                <ul class="bs-docs-footer-links muted">
                    <li>Version v0.9</li>
                    <li>&middot;</li>
                    <li><a href="mailto:sidleste@students.zhaw.ch">sidleste@students.zhaw.ch</a></li>
                    <li>&middot;</li>
                    <li><a href="http://www.zhaw.ch">ZHAW</a></li>
                </ul>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/signalr")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
